# ==========================================
# SLP SimuCase Generator - Environment Configuration
# ==========================================
# IMPORTANT: Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==========================================
# Auth0 Configuration
# ==========================================
# Get these from your Auth0 dashboard: https://manage.auth0.com/
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id-here
AUTH0_CLIENT_SECRET=your-client-secret-here
AUTH0_API_AUDIENCE=https://your-api-identifier
AUTH0_ISSUER_URL=https://your-tenant.auth0.com/

# OAuth2 Redirect URL (must match Auth0 allowed callback URLs)
OAUTH2_REDIRECT_URL=https://your-domain.com/oauth2/callback

# OAuth2 Proxy Cookie Secret (generate with: python -c 'import os,base64; print(base64.b64encode(os.urandom(32)).decode())')
OAUTH2_PROXY_COOKIE_SECRET=generate-random-32-byte-base64-string

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/slp_rbac
POSTGRES_PASSWORD=your-secure-postgres-password
SQL_ECHO=False

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=your-secure-redis-password
CACHE_TTL=3600

# ==========================================
# AI Model API Keys
# ==========================================
# OpenAI (for GPT-4o and embeddings)
OPENAI_API_KEY=sk-your-openai-api-key

# Google (for Gemini models)
GOOGLE_API_KEY=your-google-api-key

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ==========================================
# Application Configuration
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=info
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_ROOT_PATH=

# Backend API URL
BACKEND_API_URL=http://fastapi-backend:8000

# ==========================================
# Security Configuration
# ==========================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Allowed hosts for trusted host middleware (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# ==========================================
# Grant/Research Compliance
# ==========================================
# Data retention policy (days)
DATA_RETENTION_DAYS=2555  # ~7 years for research compliance

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# Research institution identifier
INSTITUTION_ID=your-institution-id

# Grant number (if applicable)
GRANT_NUMBER=your-grant-number

# ==========================================
# Monitoring and Observability (Optional)
# ==========================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Application Insights instrumentation key (Azure)
APPINSIGHTS_INSTRUMENTATION_KEY=

# Prometheus metrics port
METRICS_PORT=9090
